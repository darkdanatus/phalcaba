<div class="post <?= $thread->type; ?>" id="<?= $thread->id; ?>">
    <div class="post-info">
        <?php if ($thread->subject) { ?>
            <span class="subject"><?= $thread->subject; ?></span>
        <? } ?>
        <span class="name"><?= $thread->name; ?></span>
        <span class="time"><?= $thread->time; ?></span>
        <span class="link"><?= $thread->link; ?></span>
        <?php if ($thread->isLocked || $thread->isSticky) { ?>
            <span class="status">
            <?php if ($thread->isLocked) { ?>
                Закрыт 
            <? } ?>
            <?php if ($thread->isSticky) { ?>
                Закреплён
            <? } ?>
            </span>
        <? } ?>
        <?php if ($open == false) { ?>
            <span class="open"><?= $thread->open; ?></span>
         <? } ?>
    </div>
    
    <?php if ($thread->getFiles()) { ?>
        <div class="post-file left">
        <?php foreach ($thread->getFiles() as $file) { ?>
            <a href="<?= $file->getLink('origin'); ?>" target="_blank" data-image-expand="true">
                <img src="<?= $file->getLink('thumb'); ?>" alt="file-<?= $file->type; ?>-<?= $file->id; ?>">
                <span class="file-info">(1230x790) <?= $file->type; ?></span>
            </a>
        <? } ?>
        </div>
    <? } ?>
    
    <div class="post-text">
        <?= $thread->text; ?>
    </div>
</div>
<?php if ($thread->countReply() > $this->config->site->replyLimit && $open == false ) { ?>
    <div class="omitted"><?= $this->tag->getOmitted($thread->countReply() - $this->config->site->replyLimit); ?></div>
<? } ?>
<div class="clear"></div>